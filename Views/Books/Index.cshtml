@model IEnumerable<Assignment1_GoogleAPIBooks.Models.Book>

@{
    ViewData["Title"] = "List of Harry Potter Books";
}

<div>
    <h1 class="display-4">@ViewData["Title"]</h1>

    <table class="table table-striped table-bordered">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.title</td>
                <td style="text-align: center;">
                    <a asp-controller="Books"
                       asp-action="Details"
                       asp-route-id="@item.id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </table>
</div>
